{
  "name": "@cardano-sdk/cardano-services",
  "version": "0.2.0",
  "description": "Cardano GraphQL Services",
  "engines": {
    "node": "^14"
  },
  "main": "dist/index.js",
  "bin": {
    "tx-submit": "./dist/TxSubmit/cli.js"
  },
  "repository": "https://github.com/input-output-hk/cardano-js-sdk/packages/cardano-services",
  "contributors": [
    "Martynas Kazlauskas <martynas.kazlauskas@iohk.io>",
    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)"
  ],
  "license": "MPL-2.0",
  "scripts": {
    "build": "tsc --build ./src",
    "tscNoEmit": "shx echo typescript --noEmit command not implemented yet",
    "cleanup": "shx rm -rf dist node_modules",
    "lint": "eslint --ignore-path ../../.eslintignore \"**/*.ts\"",
    "lint:fix": "eslint --fix --ignore-path ../../.eslintignore \"**/*.ts\"",
    "test": "jest -c ./jest.config.js",
    "test:e2e": "shx echo 'test:e2e' command not implemented yet",
    "coverage": "yarn test --coverage",
    "prepack": "yarn build",
    "test:debug": "DEBUG=true yarn test",
    "run:http-server": "ts-node --transpile-only src/run.ts",
    "cli": "ts-node --transpile-only src/cli.ts",
    "mainnet:up": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker-compose -p cardano-services-mainnet up",
    "mainnet:down": "docker-compose -p cardano-services-mainnet down",
    "testnet:up": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 OGMIOS_PORT=1338 POSTGRES_PORT=5443 NETWORK=testnet docker-compose -p cardano-services-testnet up",
    "testnet:down": "docker-compose -p cardano-services-testnet down"
  },
  "devDependencies": {
    "@cardano-sdk/cardano-services-client": "0.2.0",
    "@cardano-sdk/util-dev": "0.2.0",
    "@types/dockerode": "^3.3.8",
    "@types/express": "^4.17.13",
    "@types/express-prometheus-middleware": "^1.2.1",
    "@types/pg": "^8.6.5",
    "cbor": "^8.1.0",
    "dockerode": "^3.3.1",
    "dockerode-utils": "^0.0.7",
    "get-port-please": "^2.4.3",
    "got": "^11",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@cardano-sdk/core": "0.2.0",
    "@cardano-sdk/ogmios": "0.2.0",
    "@types/bunyan": "^1.8.8",
    "@types/death": "^1.1.2",
    "@types/wait-on": "^5.3.1",
    "body-parser": "^1.19.2",
    "bunyan": "^1.8.15",
    "commander": "^9.1.0",
    "death": "^1.1.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.0",
    "express": "^4.17.3",
    "express-prom-bundle": "^6.4.1",
    "fraction.js": "^4.2.0",
    "pg": "^8.7.3",
    "prom-client": "^14.0.1",
    "reflect-metadata": "~0.1.13",
    "ts-log": "^2.2.4"
  },
  "files": [
    "dist/*",
    "!dist/tsconfig.tsbuildinfo",
    "LICENSE",
    "NOTICE"
  ]
}
